@model CookingPot.Web.ViewModels.Soups.AllMeatSoupsViewModel

@{
    this.ViewData["Title"] = "All meat soups";
}

<div class="row">
    @foreach (var recipe in Model.AllMeatSoups)
    {
        <div class="card" style="width: 18rem;margin: 10px">
            <img class="card-img-top" height="200" width="100" src="@recipe.ImageUrl" alt="@recipe.Name">
            <div class="card-body">
                <h5 class="card-title">@recipe.ShortName</h5>
                <p class="card-text">@recipe.ShortDescription</p>
                <a href="/Recipes/Details?id=@recipe.Id" class="btn btn-primary">View recipe</a>
            </div>
        </div>
    }
</div>

<div>
    @if (!Model.PreviousDisabled)
    {
        <a href="/Soups/AllMeatSoups?page=@Model.PreviousPage" class="float-left btn btn-success">Prev</a>
    }
    @if (!Model.NextDisabled)
    {
        <a href="/Soups/AllMeatSoups?page=@Model.NextPage" class="float-right btn btn-success">Next</a>
    }
</div>
