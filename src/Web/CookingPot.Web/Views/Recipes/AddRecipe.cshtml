@model CookingPot.Web.ViewModels.Recipes.RecipeInputModel

@{
    this.ViewData["Title"] = "Add recipe"; 
}
<h2 class="text-center">Add new recipe</h2>
<form asp-controller="Recipes" asp-action="AddRecipe" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Choose a category/subcategory</label>
        <select class="form-control" name="SubcategoryId">
            @foreach (var category in Model.Categories)
            {
                <optgroup label="@category.Name">
                    @foreach (var subcategory in category.Subcategories)
                    {
                        <option value="@subcategory.Id">@subcategory.Name</option>
                    }
                </optgroup>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" placeholder="How to prepare"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RecipeProducts"></label>
        <textarea asp-for="RecipeProducts" class="form-control" placeholder="Please put each product on new line"></textarea>
        <span asp-validation-for="RecipeProducts" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Image"></label>
        <br />
        <input asp-for="Image" />
    </div>
    
    <input type="submit" value="Post recipe" class="btn btn-primary" />

</form>

