@model CookingPot.Web.ViewModels.Recipes.EditRecipeViewModel

@{
    this.ViewData["Title"] = "Edit Recipe";
}

<h2 class="text-center">Edit the recipe</h2>
<form asp-controller="Recipes" asp-action="UpdateRecipe" method="post">
    <div class="form-group d-none">
        <label asp-for="Id"></label>
        <input asp-for="Id" class="form-control" value="@Model.Id" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="10" placeholder="How to prepare">@Model.Description</textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ProductsForViewModel"></label>
        <textarea asp-for="ProductsForViewModel" class="form-control" rows="10" placeholder="Please, put each product on new line">
            @Model.ProductsForViewModel
        </textarea>
        <span asp-validation-for="ProductsForViewModel" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" value="Edit recipe" />
</form>

<br />

<div>
    <a href="/Recipes/Details?id=@Model.Id" class="btn btn-primary float-left">Back</a>
</div>